{
  "name": "SmartOrder",
  "version": "2.0.1",
  "manifest_version": 3,
  "description": "Đặt lệnh phái sinh tiện lợi và chuyên nghiệp bằng thao tác kéo thả trên website SmartPro của công ty chứng khoán VPS.",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://smartpro.vps.com.vn/v1/"
      ],
      "js": [
        "js/moment.min.js",
        "js/fingerprintjs.min.js",
        "js/lightweight-charts.min.js",
        "js/simple-notify.min.js",
        "js/socket.io.min.js",
        "js/main.min.js"
      ],
      "css": [
        "css/simple-notify.min.css",
        "css/main.min.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config.json",
        "spinner.gif",
        "alert.wav"
      ],
      "matches": [
        "https://smartpro.vps.com.vn/*"
      ]
    }
  ]
}